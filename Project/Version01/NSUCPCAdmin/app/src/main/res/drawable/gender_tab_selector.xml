<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_500" />
            <corners android:bottomLeftRadius="@dimen/gender_button_radius" android:bottomRightRadius="@dimen/gender_button_radius" android:topLeftRadius="@dimen/gender_button_radius" android:topRightRadius="@dimen/gender_button_radius" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/gender_button_radius_stroke" android:color="@color/blue_500" />
            <corners android:bottomLeftRadius="@dimen/gender_button_radius" android:bottomRightRadius="@dimen/gender_button_radius" android:topLeftRadius="@dimen/gender_button_radius" android:topRightRadius="@dimen/gender_button_radius" />
        </shape>
    </item>

</selector>